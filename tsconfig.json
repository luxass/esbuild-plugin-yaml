{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "yaml.d.ts"],
  "exclude": ["node_modules", "dist"]
}
